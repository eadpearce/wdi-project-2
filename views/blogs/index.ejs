<h1>Blogs</h1>
<ul>
<% blogs.forEach(blog => { %>
  <li>
  <h2><a href="blogs/<%= blog.id %>"><%= blog.owner.username %></a></h2>
  <% if (blog.posts[blog.posts.length-1]) { %>
  <h3>Most recent post: </h3>
    <h4><a href="blogs/<%= blog.id %>/posts/<%= blog.posts[blog.posts.length-1].is %>"><%= blog.posts[blog.posts.length-1].title %></a></h4>
    <p><%= blog.posts[blog.posts.length-1].body %></p>
  <% } %>
  </li>
<% }) %>
</ul>
