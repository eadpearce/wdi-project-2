<h1><%= blog.owner.username %>'s blog posts</h1>
<% if (!posts[0]) { %>
  <p>No posts yet.<p>
<% } else if (posts[0]) { %>
  <% posts.forEach(post => { %>
    <h2><a href="/blogs/<%= blog.id %>/posts/<%= post.id %>"><%= post.title %></a></h2>
    <p class="f4"><%= post.createdAt.toLocaleString() %></p>
    <p><%= post.body %></p>
  <% }) %>
<% }%>
