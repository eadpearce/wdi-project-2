<h1 class="glow">New Blog Post</h1>
<h3 class="grd">Posting as: <%= locals.user.username %></h3>
<form action="/blogs/<%= user.blog %>/posts" method="post">
  <% for (let i = 0; i < user.profile.alts.length; i++) { %>
    <% if (user.profile.alts[i]) { %>
      <div class="db h2">
    <input
    class="dib"
    value="<%= user.profile.alts[i].split('character/')[1].split('/')[0] %>"
    name="author" type="radio" >

    <label
    class="dib alts alt<%=i%>-name"
    id="<%= user.profile.alts[i].split('character/')[1].split('/')[0] %>" for="author"><%= user.profile.alts[i] %></label>

    </div>

    <% } %>
  <% } %>
<input class="w-100 ba pa1 b--gray mb2" type="text" name="title" placeholder="Title">
<textarea name="body" class="w-100" rows="10"></textarea>
<input type="hidden" name="owner" value="<%= user.id %>">
<input type="hidden" name="blog" value="<%= user.blog %>">
<input type="hidden" name="profile" value="<%= user.profile.id %>">
<input class="ba bw1 bg-white b--blue blue" type="submit" value="Post">
</form>
