<h1 class="glow-title"><%= post.title %></h1>
<h2><a href="/profiles/<%= blog.owner.profile %>"><%= blog.owner.username %></a></h2>
<h3>At <%= post.createdAt.toLocaleString() %>  wrote:</h3>
<p  class="body"><%= post.body %></p>
<% if (locals.isLoggedIn && locals.user.username === blog.owner.username) { %>
  <a class="big btn blue-btn db fr" href="/blogs/<%= blog.id %>/posts/<%= post.id %>/edit">Edit this post</a>
<% } %>

<a class="big btn green-btn db mv2" href="/blogs/<%= blog.id %>/posts/<%= post.id %>/comments/new">Add a comment</a>

<% if (!comments[0]) { %>
  <p>No comments yet.</p>
<% } else if (comments[0]) { %>
  <% comments.forEach(comment => { %>
    <% if (comment.replyLevel > 0) { %>
      <% for (let i = 1; i <= comment.replyLevel; i++) { %>
        <blockquote>
      <% } %>
    <% } %>

    <h3><a href="/profiles/<%= comment.author.profile %>"><%= comment.author.username %></a> at
    <a href="/blogs/<%= blog.id %>/posts/<%= post.id %>/comments/<%= comment.id %>"><%= comment.createdAt.toLocaleString() %></a> said:</h3>
    <p class="body"><%= comment.body %></p>

    <% if (comment.replyLevel > 0) { %>
      <% for (let i = 1; i <= comment.replyLevel; i++) { %>
        </blockquote>
      <% } %>
    <% } %>
  <% }) %>
<% }%>
